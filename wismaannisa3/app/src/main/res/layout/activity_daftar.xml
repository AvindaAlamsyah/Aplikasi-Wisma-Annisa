<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr1"
    tools:context=".daftar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/daftar3"
            android:fontFamily="monospace"
            android:text="PENDAFTARAN"
            android:textColor="#FFF011"
            android:textSize="30sp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/adb"
            android:hint="username" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/lock"
            android:hint="password"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/lock"
            android:hint="konfirmasi password"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/email"
            android:hint="email"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/nama"
            android:hint="nama lengkap" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/telp"
            android:hint="nomor telpon"
            android:inputType="phone" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="pilih kamar"
            android:textSize="18sp"
            android:drawableLeft="@drawable/kamar"
            android:fontFamily="sans-serif"/>
        <Spinner
            android:id="@+id/spinners"
            android:layout_width="250dp"
            android:layout_height="26sp"
            android:scrollbarSize="20sp"
            android:layout_gravity="center_horizontal"
            android:background="#088A85" />

        <android.support.v7.widget.CardView
            android:layout_marginTop="9dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#01DFD7">
            <TextView
                android:id="@+id/ketentuan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="ketentuan" />
            <TextView
                android:id="@+id/ketentuans"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="no rek : 0957868686XXXX"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="no rek : 0957868686XXXX"
                android:layout_marginTop="50dp"/>
        </android.support.v7.widget.CardView>
        <Button
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:background="#F4FA58"
            android:textColor="#000000"
            android:textSize="23sp"
            android:drawableLeft="@drawable/ok"
            android:text="OK"/>


    </LinearLayout>
</ScrollView>